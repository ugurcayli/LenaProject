@model LenaProject.Form
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm("Update", "Form", FormMethod.Post))
{
    @Html.HiddenFor(a => a.Id)
    <div class="form-group">
        @Html.LabelFor(f => f.Name)
        @Html.TextBoxFor(f => f.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">

        @Html.LabelFor(f => f.Description)
        @Html.TextBoxFor(f => f.Description, new { @class = "form-control" })

    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button><br class="cl" />

}